<h2>Create a New Story</h2>

<%= form_with model: @story, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>

  <div>
    <%= form.submit "Create Story" %>
  </div>
<% end %>

<%= link_to "Back", stories_path %>