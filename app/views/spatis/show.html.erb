<div class="center">
<div class="index-container">
<ul class="index">
  <li><h3><strong><%= @spati.name %></strong></h3>
    <p><%= @spati.address%></p>
    <p>Open- <%= @spati.opening_time%></p>
    <% @spati.stories.each do |story| %>
        <%= story.content %>

    <br>
  <% end %>
<% @spati.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<p><%= link_to "Create your story for #{@spati.name}", new_spati_story_path(@spati.id) %></p>
    </li>

</ul>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%=@markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>

<%= link_to spatis_path do %>
  <div class="btn späti-button">Back to all spätis</div>
<% end %>
</div>
