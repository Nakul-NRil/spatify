<div class="container">
  <div>
    <ul>
      <% @spatis.each do |spati| %>
        <li>
          <h2 class="spati-name"><%= link_to spati.name, spati_path(spati) %></h2>
          <%= spati.address %><br>
          <%= spati.opening_time %>
        </li>
      <% end %>
    </ul>
    <div class="col-6 map-container">
      <div id="map" style="width: 100%; height: 800px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
