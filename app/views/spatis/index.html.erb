<div class="container">
  <div>
    <ul>
      <% @spatis.each do |spati| %>
        <li>
          <h1 class="spati-name"><%= link_to spati.name, spati_path(spati) %></h1>
          <%= spati.address %><br>
          <%= spati.opening_time %>
        </li>
      <% end %>
    </ul>
    <div style="width: 100%; height: 900px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
